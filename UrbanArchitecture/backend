backend/
├── src/
│   ├── models/                    # M (Modèle) : Données et logique métier
│   │   ├── entities/             # Définition des entités
│   │   │   ├── user.entity.ts
│   │   │   ├── product.entity.ts
│   │   │   ├── service.entity.ts
│   │   │   ├── booking.entity.ts
│   │   │   └── image.entity.ts
│   │   ├── repositories/         # Couche d'accès aux données
│   │   │   ├── user.repository.ts
│   │   │   ├── product.repository.ts
│   │   │   ├── service.repository.ts
│   │   │   └── booking.repository.ts
│   │   └── interfaces/           # Interfaces des modèles
│   │       ├── user.interface.ts
│   │       └── product.interface.ts
│   │
│   ├── controllers/              # C (Contrôleur) : Gestion des requêtes
│   │   ├── auth.controller.ts
│   │   ├── user.controller.ts
│   │   ├── product.controller.ts
│   │   ├── service.controller.ts
│   │   ├── booking.controller.ts
│   │   └── image.controller.ts
│   │
│   ├── views/                    # V (Vue) : Transformation des données pour le client
│   │   ├── dto/                 # Data Transfer Objects
│   │   │   ├── user.dto.ts
│   │   │   ├── product.dto.ts
│   │   │   └── booking.dto.ts
│   │   └── transformers/        # Transformateurs de données
│   │       ├── user.transformer.ts
│   │       └── product.transformer.ts
│   │
│   ├── services/                 # Services métier
│   │   ├── auth.service.ts
│   │   ├── user.service.ts
│   │   ├── product.service.ts
│   │   ├── booking.service.ts
│   │   └── image.service.ts
│   │
│   ├── middleware/               # Middleware
│   │   ├── auth.middleware.ts
│   │   ├── validation.middleware.ts
│   │   └── error.middleware.ts
│   │
│   ├── config/                   # Configuration
│   │   ├── database.config.ts
│   │   ├── auth.config.ts
│   │   └── app.config.ts
│   │
│   └── utils/                    # Utilitaires
│       ├── validators/
│       ├── helpers/
│       └── constants/